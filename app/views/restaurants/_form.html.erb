<%= form_with(model: restaurant, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "form-input w-full" %>
  </div>
  
  <div class="mb-4">
    <%= form.label :location, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :location, class: "form-input w-full" %>
  </div>
  
  <div class="flex justify-end">
    <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div>
    <%= link_to "Cancel", restaurants_path, class: "text-gray-500 hover:text-gray-700 font-semibold" %>
  </div>
<% end %>
